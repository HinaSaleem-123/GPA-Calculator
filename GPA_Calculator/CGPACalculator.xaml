<Page x:Class="GPA_Calculator.CGPACalculator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CGPA Calculator"
      Background="#E0F7F7"
      Height="600" Width="580">

    <Grid Margin="20">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <Button Width="50" Height="40" Click="NavigateButton_Click"
                    Foreground="Black" Background="Transparent" BorderThickness="0"
                    Cursor="Hand" HorizontalAlignment="Left">
                <Image Source="/back.png"
                       Width="25" Height="25" Stretch="Uniform"/>
            </Button>

            <TextBlock Text="CGPA Calculator"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#008080"
                       VerticalAlignment="Center"
                       Margin="90,0,0,0"/>
        </StackPanel>

        <Border Background="White"
                CornerRadius="20"
                Padding="25"
                Margin="0,60,0,60"
                BorderBrush="#A0E7D7"
                BorderThickness="1.5">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Number of Semesters:" 
                                   FontSize="16" 
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="SemesterCountBox"
                                 Width="90" 
                                 FontSize="14"
                                 Margin="10,0,0,0"/>
                        <Button Content="Generate Fields"
                                Click="GenerateFields_Click"
                                Margin="10,0,0,0"
                                Padding="0,5"
                                FontSize="12"
                                Width="90"
                                Background="#008080"
                                Foreground="White"/>
                    </StackPanel>

                    <StackPanel x:Name="GPAInputsPanel" Margin="0,10,0,20"/>

                    <Button Content="Calculate CGPA"
                            Click="CalculateCGPA_Click"
                            Width="130"
                            Height="30"
                            FontSize="16"
                            Background="#008080"
                            Foreground="White"
                            HorizontalAlignment="Center"/>

                    <TextBlock x:Name="ResultTextBlock"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#006666"
                               Margin="0,20,0,0"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
